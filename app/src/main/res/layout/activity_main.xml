<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neu.wudan.android_demo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组播地址："
        android:id="@+id/textView_ip"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端"
        android:id="@+id/buttonClient"
        android:layout_marginBottom="119dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView_port"
        android:layout_toEndOf="@+id/textView_port" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组播端口："
        android:id="@+id/textView_port"
        android:layout_alignBottom="@+id/editText_port"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText_ip"
        android:text="239.1.1.239"
        android:layout_alignBottom="@+id/textView_ip"
        android:layout_toRightOf="@+id/textView_ip"
        android:layout_toEndOf="@+id/textView_ip" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText_port"
        android:text="8888"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/editText_ip"
        android:layout_alignLeft="@+id/editText_ip"
        android:layout_alignStart="@+id/editText_ip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务器"
        android:id="@+id/buttonServer"
        android:layout_alignTop="@+id/buttonClient"
        android:layout_alignRight="@+id/editText_port"
        android:layout_alignEnd="@+id/editText_port" />
</RelativeLayout>
